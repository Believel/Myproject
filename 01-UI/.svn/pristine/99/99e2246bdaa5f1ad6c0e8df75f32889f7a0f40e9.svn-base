
<!-- 侧边栏 -->
<aside class="main-sidebar" ng-controller="sidebar">
  <section  class="sidebar">
    <ul class="sidebar-menu">
      <li class="header">主导航</li>
      <li class="treeview" ng-repeat="n1 in navbar">
        <a href="{{n1.link}}">
          <i  ng-class="n1.icon"></i> <span ng-bind="n1.label"></span>
          <i class="fa fa-angle-right pull-right"></i>
        </a>
        <ul class="treeview-menu">
          <li ng-repeat="n2 in n1.children">
            <a ng-href="{{n2.link}}"><i class="fa fa-circle-o"></i> <span ng-bind="n2.label"></span> <i class="fa fa-angle-right pull-right"></i></a>
            <ul class="treeview-menu">
              <li ng-repeat="n3 in n2.children">
                <a ng-href="{{n3.link}}"><i class="fa fa-circle-o"></i> <span ng-bind="n3.label"></span> <i class="fa fa-angle-right pull-right"></i></a>
              </li>
            </ul>
          </li>
        </ul>
      </li>

    </ul>
  </section>
</aside>
